<h2>Arrangement i Sykkylven og omegn</h2>

<% @products.each do |p| %>
<div class="entry">
	<h3><%= p.title %></h3>
	<%= sanitize(p.description) %><br/>
	<b>Dato:</b> <%= p.start_date %><br/>
	<b>Butikk(er):</b> <%= p.store_name %><br/>
	<b>Billetter igjen:</b> <%= p.quantity_left_in_store %>
	<div class="price_line">
		<span class="price"><%= number_to_currency(p.price) %></span>
		<%= button_to "Legg i handlekurv", line_items_path(product_id: p), remote: true, class: "btn btn-small" %>
	</div>
</div>
<% end %>