<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: "Navn pÃ¥ arrangement" %>
    <%= f.input :description, placeholder: "Beskrivelse av arrangement", :input_html => { :cols => 40, :rows => 3 } %>
    <%= f.input :price, placeholder: "Pris, f.eks. 100" %>
    <%= f.input :store_name, placeholder: "Butikknavn", :input_html => { :cols => 40, :rows => 3 } %>
    <%= f.input :quantity, placeholder: "Antall billetter til salgs" %>
    <%= f.input :start_date, as: :date_time, placeholder: "F.eks. 17 Mars 2013" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
