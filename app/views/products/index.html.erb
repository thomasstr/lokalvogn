<h2>Listing products</h2>

<table>
  <tr>
    <th>Arrangement</th>
    <th>Beskrivelse</th>
    <th>Pris</th>
    <th>Arrangement dato</th>
    <th>Bedrifter</th>
    <th>Antall billetter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.start_date %></td>
    <td><%= product.store_name %></td>
    <td><%= product.quantity %></td>
    <td><%= link_to 'Show', product, class: "btn btn-small" %></td>
    <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-small" %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

